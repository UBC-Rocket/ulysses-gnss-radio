    "version": "0.2.0",
    "configurations": [
        {
            "name": "ulysses-gnss-radio - Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${config:cmake.buildDirectory}/Debug/ulysses-gnss-radio.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "interface/stlink-dap.cfg",
                "target/stm32g0x.cfg"
            ],
            "svdFile": "${workspaceFolder}/platform/svd/STM32G0B1.svd",
            "searchDir": [
                "${env:STM32_OPENOCD_SCRIPTS_PATH}"
            ],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw"
        },
        {
            "name": "ulysses-gnss-radio - Release",
            "cwd": "${workspaceFolder}",
            "executable": "${config:cmake.buildDirectory}/Release/ulysses-gnss-radio.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "interface/stlink-dap.cfg",
                "target/stm32g0x.cfg"
            ],
            "svdFile": "${workspaceFolder}/platform/svd/STM32G0B1.svd",
            "searchDir": [
                "${env:STM32_OPENOCD_SCRIPTS_PATH}"
            ],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw"
        }
    ]
}